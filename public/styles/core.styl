$blue		= #4F81BD
$gray		= #555555
$black		= #111111
$white		= #FCFCFC
$lightgray	= #CCCCCC
$listgray1	= #EEEEEE
$listgray2	= #DDDDDD
box-sizing()
	box-sizing arguments
	-moz-box-sizing arguments

*
	padding 0
	margin 0
 ul
	padding 0
	list-style-type none
.clearfix:after {
    content: ".";
    clear: both;
    display: block;
    visibility: hidden;
    height: 0px;
}
h2, h3
	font-size 1em
	font-family PTSansBold, sans-serif
	text-transform uppercase
	padding: 5px 0 5px 0
a
	color $blue
	text-decoration none
	&:focus
	&:hover
		text-decoration underline
input
	outline none

body
	color $gray
	background-color $white
	font-family PTSansRegular, Sans-Serif
	font-size 13pt
	font-weight normal
	.page
		width 75%
		margin 0 auto 0 auto
		padding 30px 0 0 0
		&>header
			padding 10px 0 0 10px
			margin 0 0 20px 0
			text-transform uppercase
			border-bottom 2px solid $lightgray
			a.brand
				font-family PTSansBold
				font-size 1.5em
				font-weight normal
				color $blue
				text-decoration none
				&:focus
				&:hover
					text-decoration none

.content
	header
		padding 40px 0 20px 0
		.listinfo
			float right
			span
				color $lightgray
				padding 0 30px 0 30px
				border-right 1px solid $lightgray
				&:last-child
					border-right 0
					padding-right 0

form.add-task
	padding 10px 0 10px 0
	ul>li
		display block
		&:after
			content "."
			clear both
			display block
			visibility hidden
			height 0px
		input, button
			font-size inherit
			font-weight inherit
			font-family inherit
			background-color inherit
			border 2px solid $lightgray
			resize vertical
			&:focus
			&:hover
				border-color $blue
		input
			margin 0 0 0 0
			width 80%
			padding 10px
			float left
			color $lightgray
			&:focus
			&:hover
				color $blue
		button
			margin 0
			width 15%
			padding 11px 0px 9px 0px
			text-align center
			float right
			text-transform lowercase
			cursor pointer
			color $white
			background-color $lightgray
			&:focus
			&:hover
				background-color $blue
section.tasklist
	padding 20px 0 20px 0
	ul
		margin 10px 0 10px 0
		li
			margin 0
			background-color $listgray1
			&:nth-child(2n+1)
				background-color $listgray2
			input[type=checkbox]
				display none
			input[type=checkbox] + label
				width 32
				height 32
				float left
				padding 14px 20px 12px 20px
				display inline-block
				cursor pointer
				color $lightgray
				background-color $lightgray
				font-family PTSansBold
				overflow hidden
				&:hover
					color $gray
					background-color $gray
			input[type=checkbox]:checked + label
				color $white
			span
				float left
				padding 12px
			button
				float right
				color $white
				background-color $lightgray
				font-family PTSansBold
				font-size inherit
				line-height inherit
				border 0
				padding 13px 7px 13px 7px
				cursor pointer
				&:hover
					background-color $blue
			&:after
				content "."
				clear both
				display block
				visibility hidden
				height 0px

footer
	padding 20px 0 20px 0
	margin 60px 0 0 0
	text-transform lowercase
	border-top 2px solid $lightgray
	.lang-options>span
		padding 0 10px 0 10px
		border-right 1px solid $lightgray
		&:last-child
			border-right 0
		a
			color $lightgray
			&:focus
			&:hover
				color $blue
				text-decoration underline
			
		